<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dropReview"
    android:background="#C1E2F1"

    >

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="#44A1AE"
        android:background="@drawable/bottom_corner_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Iâ€™m"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Cooper"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryLite"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop me a review"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_reaction"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/back_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        app:tint="@color/colorPrimaryDark"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/john_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/john"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <EditText
            android:id="@+id/review_edit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="   Type your experience..."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_border"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_border"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_border"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_border"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_border"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/submit_feed"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Submit Feedback"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


</RelativeLayout>
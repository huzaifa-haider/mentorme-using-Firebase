<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".johnCooper"
    android:background="#C1E2F1"
    >
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:backgroundTint="#44A1AE"
        android:background="@drawable/bottom_corner_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Iâ€™m"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Cooper"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryLite"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UX Designer at"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryLite"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a passionate UX designer at Google with a focus on
creating user-centric and intuitive interfaces. With 10 years of
experience, I have had the opportunity to work on diverse
projects that have shaped my understanding of design
principles and user experience."
            android:textSize="15dp"
            android:lineHeight="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/back_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        app:tint="@color/colorPrimaryDark"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/john_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/john"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        app:tint="#FFEB3B"
        android:layout_below="@+id/john_image"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4.8"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="35dp"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/john_image"
    />
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/top_layout"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Expertise Include"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Career Advice"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="#44A1AE"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="User Experience Design"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="#44A1AE"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="Leadership"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="#44A1AE"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="Prototyping"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="#44A1AE"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:id="@+id/review_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:padding="5dp"

            >
        <TextView
            android:id="@+id/drop_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Drop a review"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/review_icon"
            android:background="#FFEB3B"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/drop_text"
            />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/join_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:padding="5dp"

            >
            <TextView
                android:id="@+id/join_text"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Join Community"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/review_icon"
                android:background="#FFEB3B"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/join_text"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/book_session"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Book a Session"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_gravity="center"
        />
</LinearLayout>


</RelativeLayout>
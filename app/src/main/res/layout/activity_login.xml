<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#C1E2F1"
    >
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/semicircle"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:id="@+id/linear_1"
        >

        <TextView
            android:id="@+id/textViewRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="mentor"
            android:textColor="#0896A8"
            android:textSize="50dp"
            android:textStyle="bold"
            /> <!-- Set color for first half -->

        <TextView
            android:id="@+id/textViewBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="#EABA2B" /> <!-- Set color for second half -->

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_2"
    android:background="@drawable/top_corner_bg"
    android:backgroundTint="#50C2C9"
    android:layout_below="@+id/linear_1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/passEdit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Your Password?"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_gravity="end"

        />
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#458F98"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:onClick="loginBtnClicked"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/randBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Random"
        android:textColor="#458F98"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:onClick="loginBtnClicked"
        android:backgroundTint="@color/white"
        />


</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignBottom="@id/linear_2"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />
</LinearLayout>



</RelativeLayout>
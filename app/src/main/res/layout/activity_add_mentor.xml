<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_mentor"
    android:background="#C1E2F1"
    >
    <ImageView
        android:id="@+id/back_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow"
        app:tint="@color/colorPrimaryDark"
        />
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/semicircle"
        />

    <LinearLayout
    android:id="@+id/add_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:layout_marginBottom="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Mentor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help us expand!"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="viewEnd"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_2"
        android:background="@drawable/top_corner_bg"
        android:backgroundTint="#50C2C9"
        android:layout_below="@+id/add_text"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_marginLeft="30dp"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_camera"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Name"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Description"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Available"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


        <TextView
            android:id="@+id/upload"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Upload"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        >

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/home_icon"
            app:tint="@color/colorIconSecondary"
            />


        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/search_icon"
            app:tint="@color/colorIconSecondary"
            />
        <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/chat_icon"
            />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/people"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/home_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/nav_bar"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/search_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/colorIconSecondary"
        android:layout_alignBottom="@+id/nav_bar"
        android:layout_toRightOf="@+id/home_icon_text"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/chat_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/colorIconSecondary"
        android:layout_alignBottom="@+id/nav_bar"
        android:layout_toRightOf="@+id/search_icon_text"
        android:layout_marginLeft="118dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/people_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:textColor="@color/colorIconSecondary"
        android:layout_alignBottom="@+id/nav_bar"
        android:layout_toRightOf="@+id/chat_icon_text"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add_icon"
        android:layout_alignParentBottom="true"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/colorPrimaryDark"
        android:background="@drawable/add_icon"
        android:layout_marginBottom="40dp"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/search_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/colorIconSecondary"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="John Cooper"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/john_session_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:text="$1500/session"
                android:textColor="#DCC609" />

            <TextView
                android:id="@+id/ux_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/john_text"
                android:padding="2dp"
                android:text="Ux Designer @ Google" />

            <ImageView
                android:id="@+id/john_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ux_text"
                android:src="@drawable/available_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="Available"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/john_session_text"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:text=" \u2764\uFE0F" />


        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/martina_layout"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/john_layout"

    android:background="#C1E2F1"
    >

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/semicircle"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_1"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:id="@+id/text_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Hello,"
            android:textSize="40sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Ali"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="#50C2C9"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bell"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="170dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready for mentorship? Letâ€™s begin the journey!"
        android:layout_below="@id/linear_1"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_2"
        android:layout_marginTop="50dp"
        android:layout_below="@id/linear_1"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="All"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/home_menu_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Education"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/home_menu_bg"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Entrepreneurship"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/home_menu_bg"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Personal Growth"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/home_menu_bg"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:text="Career"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/home_menu_bg"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bell"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="170dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/top_mentor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Mentor for you"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/linear_2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/top_mentor_text"
        />


    <RelativeLayout
        android:id="@+id/john_layout"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@id/top_mentor_text"
        android:background="@drawable/home_mentor_bg"
        android:backgroundTint="#E6DCDC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_mentor_bg"
            android:backgroundTint="@color/white">

            <TextView

                android:textColor="#DCC609" />

            <TextView
                android:id="@+id/emma_lead_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emma_text"
                android:padding="2dp"
                android:text="Lead - Technology officer" />

            <ImageView
                android:id="@+id/emma_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emma_lead_text"
                android:src="@drawable/available_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="Available"
                android:textColor="@color/colorPrimaryDark" />



        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/edu_mentor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education Mentors"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textStyle="bold"

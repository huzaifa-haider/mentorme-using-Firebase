            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_mentor_bg"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/martina_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Martina Watson"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/martina_session_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:text="$1500/session"
                android:textColor="#DCC609" />

            <TextView
                android:id="@+id/lead_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/martina_text"
                android:padding="2dp"
                android:text="Lead - Technology officer" />

            <ImageView
                android:id="@+id/martina_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lead_text"
                android:src="@drawable/available_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="Available"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/martina_session_text"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:text=" \u2764\uFE0F" />


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/emma_layout"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/martina_layout"
        android:layout_alignBaseline="@+id/john_layout"
        android:background="@drawable/home_mentor_bg"
        android:backgroundTint="#E6DCDC"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_mentor_bg"
            android:backgroundTint="@color/white">


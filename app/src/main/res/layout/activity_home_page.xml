                android:id="@+id/emma_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Emma"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Emma_session_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

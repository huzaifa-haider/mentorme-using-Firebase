            android:layout_marginLeft="20dp"
            android:src="@drawable/people"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/home_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
